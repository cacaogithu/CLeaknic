{
    "compilerOptions": {
        "lib": [
            "deno.window"
        ],
        "types": [
            "https://deno.land/x/deno/cli/tsc/dts/lib.deno.d.ts"
        ],
        "strict": true,
        "allowJs": true,
        "checkJs": false
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 2,
        "semiColons": true,
        "singleQuote": false,
        "proseWrap": "preserve"
    },
    "imports": {
        "std/": "https://deno.land/std@0.168.0/"
    }
}